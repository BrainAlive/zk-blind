{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",

      "esModuleInterop": true,
      "lib": [
        "dom",
        "dom.iterable",
        "es2020","esnext",
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "types": [
        "node", "jest"
      ],
      "incremental": true
    },
    "include": [
      "src",
      "circuits/scripts/",
      "declarations.d.ts",
    ],
    "exclude": [
      "node_modules"
    ]
  }